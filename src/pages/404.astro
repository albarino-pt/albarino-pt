---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en-us">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="bg-zinc-900">
    <Header />

    <main class="flex place-content-center">
      <section
        class="bg-zinc-900 bg-opacity-50 backdrop-blur-lg py-12 mt-18 mb-24 mx-4 rounded-lg shadow-lg"
      >
        <div class="container mx-auto px-6">
          <div class="flex flex-wrap">
            <div class="w-full md:full p-4">
              <h2
                class="text-3xl font-semibold text-white mb-4 flex justify-center"
              >
                404
              </h2>
              <p class="text-zinc-400 leading-relaxed">
                Ups não estamos a encontrar a página que procuras
              </p>
              <a
                href="/"
                class="bg-zinc-700 hover:bg-zinc-800 transition-all text-white px-6 py-3 rounded-lg shadow-lg"
              >
                Regressar ao início
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
